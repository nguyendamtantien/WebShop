<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Tools Shop</title>
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1252" />
    <link rel="stylesheet" type="text/css" href="~/style.css" />
    <!--[if IE 6]>
    <link rel="stylesheet" type="text/css" href="iecss.css" />
    <![endif]-->
    @*<script type="text/javascript" src="js/boxOver.js"></script>*@
</head>
<body>
    <div id="main_container">
        <div id="header">
            @RenderSection("Header", false)
        </div>
        <div id="main_content">
            <div id="menu_tab">
                <ul class="menu">
                    <li><a href="@Url.Action("Index","Home")" class="nav"> Home </a></li>
                    <li class="divider"></li>
                    <li><a href="@Url.Action("Index","Home")" class="nav">Products</a></li>
                    <li class="divider"></li>
                    <li><a href="@Url.Action("MyAccount","User")" class="nav">My account</a></li>
                    <li class="divider"></li>
                    <li><a href="http://all-free-download.com/free-website-templates/" class="nav">Shipping </a></li>
                    <li class="divider"></li>
                    <li><a href="contact.html" class="nav">Contact Us</a></li>
                    <li class="divider"></li>
                    <li><a href="details.html" class="nav">Details</a></li>
                    <li class="divider"></li>
                    <li><a href="@Url.Action("Register","User")" class="nav">Sign Up</a></li>
                    <li class="divider"></li>
                    @if (Session["email"] != null)
                    {
                        <li>Hello @Session["email"] <a href="@Url.Action("Logout","User")" class="nav">Logout </a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Login","User")" class="nav">Sign In </a></li>
                    }
                </ul>
            </div>
            <!-- end of menu tab -->
            <div class="crumb_navigation"> Navigation: <span class="current">Home</span> </div>
            <div class="left_content">
                <div class="title_box">Categories</div>
                @Html.Action("LoadCategory", "Home")
                <div class="title_box">Special Products</div>
                <div class="border_box">
                    <div class="product_title"><a href="http://all-free-download.com/free-website-templates/">Makita 156 MX-VL</a></div>
                    <div class="product_img"><a href="http://all-free-download.com/free-website-templates/"><img src="~/images/p1.jpg" alt="" border="0" /></a></div>
                    <div class="prod_price"><span class="reduce">350$</span> <span class="price">270$</span></div>
                </div>
                <div class="title_box">Newsletter</div>
                <div class="border_box">
                    <input type="text" name="newsletter" class="newsletter_input" value="your email" />
                    <a href="http://all-free-download.com/free-website-templates/" class="join">subscribe</a>
                </div>
                <div class="banner_adds"> <a href="http://all-free-download.com/free-website-templates/"><img src="~/images/bann2.jpg" alt="" border="0" /></a> </div>
            </div>
            <!-- end of left content -->
            <div class="center_content">
                @RenderBody()
            </div>
            <!-- end of center content -->
            
            @RenderSection("Right", false)
            <!-- end of right content -->
        </div>
        <!-- end of main content -->
        <div class="footer">
            @RenderSection("Footer", false)
        </div>
    </div>
    <!-- end of main_container -->
    <div align=center>This template  downloaded form <a href='http://all-free-download.com/free-website-templates/'>free website templates</a></div>
</body>
</html>

